<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jholland20.myapp.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code Blocks"
        android:id="@+id/textView" />

    <Button
        android:text="Forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/forwardButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forwardButton"
        android:layout_alignParentStart="true"
        android:id="@+id/backButton" />

    <Button
        android:text="Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rightButton"
        android:layout_alignParentStart="true"
        android:id="@+id/leftButton" />

    <Button
        android:text="Repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repeatButton"
        android:layout_below="@+id/foreverButton"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waitButton"
        android:layout_below="@+id/repeatButton"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
        android:layout_height="match_parent"
        android:layout_below="@+id/waitButton"
        android:layout_above="@+id/runButton"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/waitButton" />


    <Button
        android:text="Run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightButton"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Forever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreverButton"
        android:layout_below="@+id/leftButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Erase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/erase"
        android:layout_below="@+id/waitButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/my_recycler_view"
        android:layout_toEndOf="@+id/forwardButton">

        <Button
            android:text="Ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ship"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gear"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/Ship" />

        <Button
            android:text="Robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Robot"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>
