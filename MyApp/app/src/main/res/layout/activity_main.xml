<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jholland20.myapp.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code Blocks"
        android:id="@+id/textView" />

    <Button
        android:text="Forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/forwardButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forwardButton"
        android:layout_alignParentStart="true"
        android:id="@+id/backButton" />

    <Button
        android:text="Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rightButton"
        android:layout_alignParentStart="true"
        android:id="@+id/leftButton" />

    <Button
        android:text="Repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repeatButton"
        android:layout_below="@+id/foreverButton"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waitButton"
        android:layout_below="@+id/repeatButton"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="horizontal"
        android:layout_height="match_parent"
        android:layout_below="@+id/waitButton"
        android:layout_above="@+id/runButton"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/waitButton" />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:columnCount="3"
        android:rowCount="7"
        android:layout_above="@+id/my_recycler_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/forwardButton">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:layout_alignBaseline="@+id/forwardButton"
            android:layout_alignBottom="@+id/forwardButton"
            android:layout_toEndOf="@+id/forwardButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:layout_toEndOf="@+id/forwardButton"
            android:layout_above="@+id/rightButton"
            android:layout_below="@+id/button12" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:layout_alignBaseline="@+id/button11"
            android:layout_alignBottom="@+id/button11"
            android:layout_toEndOf="@+id/button11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button15"
            android:layout_below="@+id/button13"
            android:layout_alignStart="@+id/button13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            android:layout_below="@+id/button18"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/button7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button25"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_alignBaseline="@+id/button3"
            android:layout_alignBottom="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_below="@+id/button8"
            android:layout_alignStart="@+id/button8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_below="@+id/button9"
            android:layout_alignStart="@+id/button9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_below="@+id/button10"
            android:layout_alignStart="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:layout_alignBaseline="@+id/button12"
            android:layout_alignBottom="@+id/button12"
            android:layout_toEndOf="@+id/button12" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_above="@+id/button4"
            android:layout_toEndOf="@+id/button8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_below="@+id/button14"
            android:layout_toStartOf="@+id/button14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:layout_alignBaseline="@+id/leftButton"
            android:layout_alignBottom="@+id/leftButton"
            android:layout_toEndOf="@+id/leftButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_below="@+id/button14"
            android:layout_toEndOf="@+id/button16" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button16"
            android:layout_above="@+id/button7"
            android:layout_toEndOf="@+id/button15" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:layout_alignBaseline="@+id/button10"
            android:layout_alignBottom="@+id/button10"
            android:layout_toEndOf="@+id/button9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button19"
            android:layout_below="@+id/button6"
            android:layout_toEndOf="@+id/button20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:layout_alignBaseline="@+id/button15"
            android:layout_alignBottom="@+id/button15"
            android:layout_toEndOf="@+id/button15" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:layout_below="@+id/button19"
            android:layout_toEndOf="@+id/button16" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            android:layout_alignBaseline="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_alignParentEnd="true" />
    </GridLayout>

    <Button
        android:text="Run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightButton"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Forever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreverButton"
        android:layout_below="@+id/leftButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Erase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/erase"
        android:layout_below="@+id/waitButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView2" />


</RelativeLayout>
